project_name: soc_thunderboard_brd4166a
package: Bluetooth
label: Bluetooth - SoC Thunderboard Sense 2
description: >
  Demonstrates the features of the Thunderboard Sense 2 Kit.
  This can be tested with the Thunderboard mobile app.
category: Bluetooth Examples
quality: production

component:
  - id: brd4166a
  - id: bluetooth
  - id: ota_dfu
  - id: bootloader_interface
  - id: rail_util_pti
  - id: app_log
  - id: app_assert
  - id: component_catalog
  - id: iostream_usart
    instance:
      - vcom
  - id: iostream_retarget_stdio
  - id: printf
  - id: simple_timer
  - id: mpu
  - id: power_supply

  - id: gatt_service_aio
  - id: gatt_service_battery
  - id: gatt_service_gas
  - id: gatt_service_hall
  - id: gatt_service_imu
  - id: gatt_service_light
  - id: gatt_service_pressure
  - id: gatt_service_rgb
  - id: gatt_service_rht
  - id: gatt_service_sound
  - id: sensor_gas
  - id: sensor_hall
  - id: sensor_imu
  - id: sensor_light
  - id: sensor_pressure
  - id: sensor_rht
  - id: sensor_sound

  - id: i2cspm
    instance:
      - sensor
  - id: simple_led
    instance:
      - led0
      - led1
  - id: simple_button
    instance:
      - btn0
      - btn1
  - id: simple_rgbw_pwm_led
    instance:
      - led_rgb

source:
  - path: advertise.c
  - path: app.c
  - path: app_properties.c
  - path: main.c
  - path: brd4166a/rgbled.c

include:
  - path: .
    file_list:
    - path: advertise.h
    - path: app.h
  - path: brd4166a
    file_list:
    - path: board.h

config_file:
  - override:
      component: gatt_configuration
      file_id: gatt_configuration_file_id
    path: gatt_configuration_brd4166a.btconf
    directory: btconf
  - override:
      component: simple_rgbw_pwm_led
      file_id: simple_rgbw_pwm_led_config
      instance: led_rgb
    path: brd4166a/sl_simple_rgbw_pwm_led_led_rgb_config.h

other_file:
  - path: ../../script/create_bl_files.bat
  - path: ../../script/create_bl_files.sh

configuration:
  - name: SL_STACK_SIZE
    value: "2048"
  - name: SL_HEAP_SIZE
    value: "8630"
  - name: SL_BOARD_ENABLE_VCOM
    value: "1"
  - name: SL_BOARD_ENABLE_SENSOR_RHT
    value: "1"

define:
  - name: SL_SIMPLE_BUTTON_COUNT
    value: "2"
  - name: SL_SIMPLE_LED_COUNT
    value: "2"

tag:
  - prebuilt_demo

ui_hints:
  highlight:
    - path: config/btconf/gatt_configuration_brd4166a.btconf
      focus: true
